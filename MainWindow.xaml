<Window x:Class="DotNet6Speak.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DotNet6Speak"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Enter your name" HorizontalAlignment="Left" Margin="149,157,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="NameBox" HorizontalAlignment="Left" Margin="294,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="14"/>
        <Button x:Name="EnterBtn" Content="Enter" HorizontalAlignment="Left" Margin="451,161,0,0" VerticalAlignment="Top" FontSize="14" Width="100" Click="EnterBtn_Click"/>
        <Button x:Name="ExitBtn" Content="Exit" HorizontalAlignment="Left" Margin="656,350,0,0" VerticalAlignment="Top" FontSize="14" Width="100" Click="ExitBtn_Click"/>

    </Grid>
</Window>
